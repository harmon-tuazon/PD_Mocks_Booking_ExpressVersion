# PrepDoctors Admin Dashboard - Environment Variables Example
# Copy this to .env and fill in your actual values

# ===== REQUIRED FOR DEVELOPMENT =====

# HubSpot Configuration (REQUIRED)
HS_PRIVATE_APP_TOKEN=your_hubspot_private_app_token
HUBSPOT_PORTAL_ID=your_portal_id

# Application Environment
NODE_ENV=development
VERCEL_URL=http://localhost:3000

# Security Configuration
ALLOWED_ORIGIN=http://localhost:3000,http://localhost:3001
CRON_SECRET=your_cron_secret
VERCEL_AUTOMATION_BYPASS_SECRET=your_bypass_secret

# ===== SUPABASE (REQUIRED FOR ADMIN AUTH) ===== #
# Backend variables (for API)
SUPABASE_DB_PASS=your_supabase_db_password
SUPABASE_DB_API=https://your-project.supabase.co
SUPABASE_DB_API_KEY=your_supabase_service_role_key

# Frontend variables (must have VITE_ prefix for Vite to expose them)
# ⚠️ CRITICAL: These MUST be set in Vercel dashboard for deployment
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# ===== REDIS ===== #
PD_Bookings_Cache_REDIS_URL=your_redis_connection_string

# ===== HUBSPOT OBJECT TYPE IDs =====
CONTACTS_OBJECT_ID=0-1
DEALS_OBJECT_ID=0-3
COURSES_OBJECT_ID=0-410
TRANSACTIONS_OBJECT_ID=2-47045790
PAYMENT_SCHEDULES_OBJECT_ID=2-47381547
CREDIT_NOTES_OBJECT_ID=2-41609496
CAMPUS_VENUES_OBJECT_ID=2-41607847
ENROLLMENTS_OBJECT_ID=2-41701559
LAB_STATIONS_OBJECT_ID=2-41603799
BOOKINGS_OBJECT_ID=2-50158943
MOCK_EXAMS_OBJECT_ID=2-50158913

# ===== PRODUCTION DEPLOYMENT NOTES =====
# When deploying to Vercel:
# 1. Go to Vercel Dashboard → Your Project → Settings → Environment Variables
# 2. Add ALL variables above, especially:
#    - VITE_SUPABASE_URL
#    - VITE_SUPABASE_ANON_KEY
# 3. Environment variables starting with VITE_ are embedded at BUILD TIME
# 4. After adding env vars, redeploy to rebuild with new variables
